services:
  do:
    image: eclipse-mosquitto:2.0
    container_name: smartstar-mosquitto-mqtt
    restart: unless-stopped
    ports:
      - "1883:1883"
    volumes:
      - ./mosquitto/config/mosquitto.conf:/mosquitto/config/mosquitto.conf:ro
      - ./mosquitto/data:/mosquitto/data
      - ./mosquitto/logs:/mosquitto/logs
    deploy:
      resources:
        limits:
          memory: 256M
          cpus: '0.5'
        reservations:
          memory: 64M
          cpus: '0.1'
    networks:
      - smartstar
  kafka:
    image: apache/kafka:4.0.0
    container_name: smartstar-kafka-broker
    restart: unless-stopped
    ports:
      - "9092:9092"
      - "9093:9093"
      - "9094:9094"
    volumes:
      - ./kafka/data:/var/lib/kafka/data
      - ./kafka/logs:/opt/kafka/logs
      - ./kafka/metadata:/var/lib/kafka/metadata
    environment:
  # KRaft Configuration
      KAFKA_NODE_ID: 1
      KAFKA_PROCESS_ROLES: broker,controller
      KAFKA_CONTROLLER_QUORUM_VOTERS: 1@smartstar-kafka-broker:9093
      KAFKA_CONTROLLER_LISTENER_NAMES: CONTROLLER
      KAFKA_LISTENERS: PLAINTEXT://0.0.0.0:9092,PLAINTEXT_HOST://0.0.0.0:9094,CONTROLLER://0.0.0.0:9093
      KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://smartstar-kafka-broker:9092,PLAINTEXT_HOST://localhost:9094
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: CONTROLLER:PLAINTEXT,PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
      KAFKA_INTER_BROKER_LISTENER_NAME: PLAINTEXT
      


      # Storage Configuration
      KAFKA_LOG_DIRS: /var/lib/kafka/data
      KAFKA_METADATA_LOG_DIR: /var/lib/kafka/metadata/
      
      # Topic Configuration
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
      KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR: 1
      KAFKA_TRANSACTION_STATE_LOG_MIN_ISR: 1
      KAFKA_DEFAULT_REPLICATION_FACTOR: 1
      KAFKA_MIN_INSYNC_REPLICAS: 1
      
      # Performance & Retention
      KAFKA_LOG_RETENTION_HOURS: 168
      KAFKA_LOG_SEGMENT_BYTES: 1073741824
      KAFKA_LOG_RETENTION_CHECK_INTERVAL_MS: 300000
      KAFKA_NUM_PARTITIONS: 3
      
      # JVM Configuration
      KAFKA_HEAP_OPTS: "-Xmx512M -Xms512M"
      
    deploy:
      resources:
        limits:
          memory: 1G
          cpus: '1.0'
        reservations:
          memory: 512M
          cpus: '0.5'
    healthcheck:
      test: ["CMD-SHELL", "nc -z localhost 9092 || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 5
      start_period: 60s
    networks:
      - smartstar

  kafka-ui:
    image: provectuslabs/kafka-ui:latest
    container_name: smartstar-kafka-ui
    restart: unless-stopped
    ports:
      - "8080:8080"
    environment:
      KAFKA_CLUSTERS_0_NAME: local
      KAFKA_CLUSTERS_0_BOOTSTRAPSERVERS: smartstar-kafka-broker:9092
      DYNAMIC_CONFIG_ENABLED: true
    depends_on:
      kafka:
        condition: service_healthy
    networks:
      - smartstar

  kafka-connect:
    image: apache/kafka:4.0.0   # vanilla Kafka distro with Connect
    container_name: smartstar-kafka-connect
    entrypoint: ["/bin/bash", "-c"]
    command:
      - |
        # Add your connector JARs under /etc/kafka-connect/plugins
        exec /opt/kafka/bin/connect-distributed.sh /etc/kafka/connect-distributed.properties
    environment:
      # External Kafka cluster (your Strimzi bootstrap)
      BOOTSTRAP_SERVERS: smartstar-kafka-broker:9092

      # Connect cluster identity
      GROUP_ID: "external-connect-cluster"
      CONFIG_STORAGE_TOPIC: "_connect-configs"
      OFFSET_STORAGE_TOPIC: "_connect-offsets"
      STATUS_STORAGE_TOPIC: "_connect-status"
      # REST API
      REST_PORT: 8083
    depends_on:
      kafka:
        condition: service_healthy
    networks:
      - smartstar

    ports:
      - "8083:8083"

    volumes:
      - ./kafka/plugins:/etc/kafka-connect/plugins
      - ./kafka/connect-distributed.properties:/etc/kafka/connect-distributed.properties

  minio:
    image: minio/minio:latest
    container_name: smartstar-minio
    ports:
      - "9000:9000"
      - "9001:9001"
    volumes:
      - ./minio/data/:/data
    command: server /data --console-address ":9001"
    deploy:
      resources:
        limits:
          cpus: 1
          memory: 1G
    networks:
      - smartstar

  postgres:
    image: postgres:16
    container_name: smartstar-postgres
    restart: always
    environment:
      POSTGRES_DB: smartstar
      POSTGRES_USER: smartstar
      POSTGRES_PASSWORD: smartstar
    ports:
      - "5432:5432"
    volumes:
      - ./postgres/data:/var/lib/postgresql/data
    networks:
      - smartstar
networks:
  smartstar:
    driver: bridge